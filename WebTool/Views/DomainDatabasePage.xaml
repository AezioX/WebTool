<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebTool.Views.DomainDatabasePage"
             BackgroundColor="{DynamicResource DarkColor}"
             Shell.TitleColor="{DynamicResource MainColor}"
             Title="Domain Database">
    <ContentPage.Content>
        <StackLayout Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Entry Grid.Column="0"
                       Text="{Binding Domain}" TextColor="{DynamicResource MainColor}"
                       Placeholder="Find registered domains" PlaceholderColor="{DynamicResource MainColor}"
                       MaxLength="50">
                </Entry>
                <Button Grid.Column="1"
                        Text="Search" TextColor="{DynamicResource MainColor}"
                        FontSize="Small"
                        Command="{Binding SearchCommand}"/>
                </Grid>
                <ListView BackgroundColor="{DynamicResource DarkColor}"
                          ItemsSource="{Binding DomainSearchResults}"
                          HasUnevenRows="True"
                          SeparatorVisibility="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label TextColor="{DynamicResource MainColor}"
                                       Text="{Binding Domain}"
                                       FontAttributes="Bold"
                                       FontSize="Large"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="{DynamicResource MainColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>