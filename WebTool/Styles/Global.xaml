<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Main Colors: -->
    <!-- #ff0000 red AezioX's Choice-->
    <!-- #0dff00 green Default Theme-->
    <Color x:Key="MainColor">#ff0000</Color>
    <Color x:Key="SecondayColor">#73120b</Color>
    <Color x:Key="DarkColor">#000000</Color>
    <Color x:Key="DisabledColor">#669999</Color>
    <Color x:Key="UnselectedColor">#669999</Color>

    <Style ApplyToDerivedTypes="True" TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="BarTextColor" Value="{DynamicResource MainColor}"/>
    </Style>

    <Image x:Key="FlyoutHeaderImage" Source="Green/Nebula-Green.jpg"/>

    <FlyoutItem x:Key="Tiger" Icon="Green/tiger.png"/>

</ResourceDictionary>
